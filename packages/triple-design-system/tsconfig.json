{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
