{
  "name": "root",
  "private": true,
  "scripts": {
    "build-resources": "lerna exec --parallel 'BABEL_ENV=build babel --root-mode upward src --out-dir lib --source-maps --extensions .ts,.tsx,.js --delete-dir-on-start --no-comments'",
    "build-declarations": "lerna exec --parallel tsc",
    "build": "npm run build-resources && npm run build-declarations",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,json}\"",
    "lint": "npm run prettier && eslint '{src,test/src}/**/*.js'",
    "test": "cd test && npm test"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-styled-components": "^1.10.6",
    "csstype": "^2.6.6",
    "eslint": "^6.1.0",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
